{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 3
    },
    "configurePresets": [
        {
            "name": "common",
            "inherits": [ "base" ],
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "PATH",
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
                }
            }
        },
        {
            "name": "ninja-clang",
            "inherits": [ "common" ],
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "ninja-cl",
            "inherits": [ "common" ],
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        },
        {
            "name": "vs-cl",
            "inherits": [ "common" ],
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "ninja-clang",
            "configurePreset": "ninja-clang",
            "configuration": "Debug"
        },
        {
            "name": "ninja-cl",
            "configurePreset": "ninja-cl",
            "configuration": "Debug"
        },
        {
            "name": "vs-cl",
            "configurePreset": "vs-cl",
            "configuration": "Debug"
        }
    ]
}
